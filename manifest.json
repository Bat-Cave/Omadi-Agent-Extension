{
  "name": "Omadi Agent Extension",
  "version": "1.0",
  "description": "Omadi agent tools",
  "permissions": ["tabs", "activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "/overlay.css"
  ],
  "manifest_version": 2
}